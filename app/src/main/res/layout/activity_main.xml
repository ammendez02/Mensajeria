<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margenes1"
        android:gravity="center"
        android:text="@string/mensajeria"
        android:textSize="@dimen/tamTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRecibido1"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginLeft="@dimen/margenes1"
        android:layout_marginTop="@dimen/margenes2"
        android:layout_marginRight="@dimen/margenes1"
        android:text="@string/txt_recibido1"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo1" />

    <EditText
        android:id="@+id/edtEnviado1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margenes1"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/margenes1"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/edt_hint_enviar1"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:maxLength="20"
        android:minHeight="48dp"
        android:textColorHint="@color/azulito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRecibido1" />

    <Button
        android:id="@+id/btEnviar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:text="@string/botonEnviar1"
        android:onClick="enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEnviado1"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>